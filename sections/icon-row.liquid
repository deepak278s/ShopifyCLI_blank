    {% if section.settings.spacing_bottom_tablet != '' %}pb-{{ section.settings.spacing_bottom_tablet }}--tablet{% endif %}
    ">

    {%- liquid
        for block in section.blocks
            if block.settings.icon
                assign icon = block.settings.icon | image_url: width: 300 | image_tag: loading: 'lazy', class: 'mx-a'
