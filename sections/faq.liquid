{%- capture section-border -%}
{% if section.settings.border_top == true -%}border-top{%- endif %}
{% if section.settings.border_bottom == true -%}border-bottom{%- endif %}
{%- endcapture %}

{%- liquid
    for block in section.blocks
        if forloop.length > 0 
            assign show_faq = true
        endif
    endfor
-%}

{% if show_faq == true %}
<div class="collection__faq {{ section.settings.margin_top }} {{ section.settings.margin_bottom }} {{ section.settings.padding_top }} {{ section.settings.padding_bottom }} {{ section-border }}">
<div class="{{ section.settings.container }} {% if section.settings.center_align == false %}m-0{% endif %}">
    {% if section.settings.heading != blank %}    
      <h3 class="title--sm fnt-sec uc text-align-center mb-md">{{ section.settings.heading }}</h3>
    {% endif %}
        <div class="faq-accordion" id="{{ section.id }}">
            {% for block in section.blocks %}
                <h2 class="faq-accordion-title py-sm fnt-sec md uc">
                    {{ block.settings.question }}
                    <span class="arrow">
						{% render 'icons', icon: 'chevron-right' %}
					</span>
                </h2>
                <div class="accordion-content mb-md lg">
                    <p>{{ block.settings.answer }}</p>
                </div>
            {% endfor %}
        </div> 
    </div>
</div>
{% endif %}


