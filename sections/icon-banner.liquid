<section class="icon-banner bg-white flex--above-tablet f-equal-width--above-tablet
    {% if section.settings.border-top %} bt-1{% endif %}{% if section.settings.border-bottom %} bb-1{% endif %}
    mt-{{ section.settings.spacing_top }} mb-{{ section.settings.spacing_bottom }}">

    {%- for block in section.blocks -%}

        <div class="text-align-center py-xl--above-tablet py-lg px-md">

            {%- liquid
                if block.settings.icon
                    echo block.settings.icon | image_url: width: 200 | image_tag: loading: 'lazy', class: 'icon-banner__icon mx-a mb-md'
                endif
                if block.settings.title != ''
                    render 'title', title: block.settings.title, tag: block.settings.title_tag, class: 'title--sm mb-sm'
                endif
                if block.settings.content != ''
                    render 'richtext', content: block.settings.content, class: 'mt-sm'
                endif
            -%}

        </div>

    {%- endfor -%}

</section>

