    {
      "type": "select",
      "label": "Form Submissin Behavior",
      "id": "submission_behavior",
      "options": [
        {
          "value": "reload",
          "label": "Reload"
        },
        {
          "value": "ajax",
          "label": "Ajax"
        }
      ],
      "default": "reload"
    }
  ],
  "blocks": [
    {
      "type": "select-topic",
      "name": "select topic",
      "settings": [
        {
          "type": "text",
          "id": "topic_name",
          "label": "Enter your topic",
          "default": "Select a topic"
        }
      ]
    }
  ]
}
