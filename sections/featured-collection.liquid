{%- liquid
    assign featured_collection = collections[section.settings.collection]
-%}

<div class="container
    mt-{{ section.settings.spacing_top }} mb-{{ section.settings.spacing_bottom }}
    {% if section.settings.spacing_top_tablet != '' %}mt-{{ section.settings.spacing_top_tablet }}--tablet{% endif %}
    {% if section.settings.spacing_bottom_tablet != '' %}mb-{{ section.settings.spacing_bottom_tablet }}--tablet{% endif %}">

    {%- render 'featured-collection__header', title: section.settings.title, title_tag: section.settings.title_tag, link_text: section.settings.link_text, link: featured_collection.url -%}

    <ul class="grid grid--5 grid--2--tablet featured__collection-products">

        {%- liquid
            for featured_collection_product in featured_collection.products limit: 5
                render 'product-item', product: featured_collection_product, collection: featured_collection
            endfor
        -%}

    </ul>

    
</div>

