{%- liquid
    assign section_id = 'shopify-section-' | append: section.id
-%}
<div {% if section.settings.id != '' %}id="{{ section.settings.id }}"{% endif %}
    class="container{% if section.settings.width %}--sm{% endif %}
    mt-{{ section.settings.spacing_top }} mb-{{ section.settings.spacing_bottom }}
    {% if section.settings.spacing_top_tablet != '' %}mt-{{ section.settings.spacing_top_tablet }}--tablet{% endif %}
    {% if section.settings.spacing_bottom_tablet != '' %}mb-{{ section.settings.spacing_bottom_tablet }}--tablet{% endif %}">

    {%- style -%}
    #{{ section_id }} {
        padding-top: {{ section.settings.custom_spacing }}px;
        padding-bottom: {{ section.settings.custom_spacing }}px;
    }
    @media screen and (max-width: 768px) {
        #{{ section_id }} {
            padding-top: {{ section.settings.custom_spacing_tablet }}px;
            padding-bottom: {{ section.settings.custom_spacing_tablet }}px;
        }
    }
    {%- endstyle -%}

    {%- liquid
        if section.settings.title != empty
            assign title_class = 'title--lg color-links'
            if section.settings.content != empty or section.settings.link_text != empty
                assign title_class = title_class | append: ' mb-lg'
            endif
            render 'title', title: section.settings.title, tag: section.settings.title_tag, class: title_class
        endif
        if section.settings.content != empty
            render 'richtext', content: section.settings.content
        endif
        if section.settings.link_text != empty
            render 'link', style: 'button--light', text: section.settings.link_text, link: section.settings.link
        endif
    -%}

</div>

