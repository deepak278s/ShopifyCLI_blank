<div id="image-banner__{{ section.id }}--image__{{ block.id }}"
    class="image-banner__image-wrap"
    {{ block.shopify_attributes }}>
    {%- style -%}
        #image-banner__{{ section.id }}--image__{{ block.id }} {
            --icon-width: {{ block.settings.icon_width }}px;
            --icon-bottom: {{ block.settings.icon_bottom }}%;
            --icon-right: {{ block.settings.icon_right }}%;
            --icon-x: {{ block.settings.icon_x }}%;
            --icon-y: {{ block.settings.icon_y }}%;
            --image-span: {{ block.settings.image_span }};
            --padding: {{ block.settings.padding }}%;
        }
        @media screen and (max-width: 768px) {
            #image-banner__{{ section.id }}--image__{{ block.id }} {
                --icon-width: {{ block.settings.icon_width_tablet }}px;
                --icon-bottom: {{ block.settings.icon_bottom_tablet }}%;
                --icon-right: {{ block.settings.icon_right_tablet }}%;
                --icon-x: {{ block.settings.icon_x_tablet }}%;
                --icon-y: {{ block.settings.icon_y_tablet }}%;
                --image-span: {{ block.settings.image_span_tablet }};
                --padding: {{ block.settings.padding_tablet }}%;
            }
        }
    {%- endstyle -%}
    {%- liquid
        if block.settings.image
            echo block.settings.image | image_url: width: 1000 | image_tag: loading: 'lazy', class: 'image-banner__image'
        endif
        if block.settings.icon
            assign icon_class = 'image-banner__image-icon'
            if block.settings.icon_display == 'desktop'
                assign icon_class = icon_class | append: ' hide--tablet'
            elsif block.settings.icon_display == 'tablet'
                assign icon_class = icon_class | append: ' hide--above-tablet'
            endif
            echo block.settings.icon | image_url: width: 140 | image_tag: loading: 'lazy', class: icon_class
        endif
    -%}
</div>