<div class="popup-collection__card popup-collection__card--{{index}}" data-start-date="{{collection.metafields.popup.start_date}}" data-end-date="{{collection.metafields.popup.end_date}}">
    <div class="popup-collection__card-image" style="background-image: url({{collection.image | img_url: '590x'}})">
        {% if collection.metafields.popup.notify == true %}
            <span class="popup-collection__card-notify">Launches Soon</span>
        {% elsif collection.metafields.popup.homepage_badge != blank %}
            <span class="popup-collection__card-badge">{{collection.metafields.popup.homepage_badge}}</span>
        {% endif %}
    </div>
    <h3 class="popup-collection__title">{{collection.title}}</h3>
    {% if collection.description != '' %}
        <p class="popup-collection__description">{{collection.description}}</p>
    {% endif %}
    {% if collection.metafields.popup.notify == true %}
        <a class="popup-collection__btn btn" data-notify-popup="{{collection.title}}">Notify Me</a>
    {% else %}
        <a class="popup-collection__btn btn" href="{{collection.url}}">Shop Now</a>
    {% endif %}
</div>
<style>
    .popup-collection__card--{{index}} .popup-collection__card-badge {
        background-color: {{collection.metafields.popup.homepage_badge_colour}};
    }
</style>