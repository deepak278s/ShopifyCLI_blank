{%- liquid
    assign collection_image_class = 'collection__header-image hide--tablet'
-%}

<header class="collection__header--brand px-sm--tablet text-align-center flex--above-tablet">

    {%- liquid
        if collection.image
            echo '<div class="' | append: collection_image_class | append: '">'
            echo collection.image | image_url: width: 2560 | image_tag: preload: true
            echo '</div>'
        endif
    -%}

    <div class="collection__header-content container py-lg px-xl--above-tablet px-xs--tablet">
        {%- liquid
            assign title_class = 'collection__title title--sm title--lg--tablet '
            if collection.description != empty
                assign title_class = title_class | append: ' mb-sm'
            endif
            if collection.title != empty
                render 'title', title: collection.title, tag: 'h1', class: title_class
            endif
            if collection.description != empty
                assign description_class = 'lg mt-xs mx-a'
                render 'richtext', content: collection.description, class: description_class
            endif
        -%}

        {% if collection.metafields.brand.show_video %}
            {%- liquid
                capture collection_header_link
                    echo 'icon-video.svg' | asset_url | img_tag: loading: 'lazy', width: '22'
                    echo '<span class="underline xs blue">'
                    echo 'collections.general.view_brand_video' | t
                    echo '</span>'
                endcapture
                echo collection_header_link | link_to: '#brand-video', class: 'collection__header-link fnt-sec flex f-vertical-center f-center mt-md'
            -%}
        {% endif %}
        
    </div>
</header>