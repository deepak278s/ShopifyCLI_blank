<div class="banner-column__collection px-md px-xl--above-tablet" id="block--{{ block.id }}" {{ block.shopify_attributes }}>
    <ul class="grid grid--2">
        {%- liquid
            assign column_collection = collections[block.settings.collection]
            for column_product in column_collection.products limit: 4
                render 'product-item', product: column_product
            endfor
        -%}
    </ul>
