{%- form 'customer', class: 'flex--above-tablet f-flex-start f-vertical-middle black mb-lg--tablet pb-xl--above-tablet' -%}
    {%- if form.posted_successfully? -%}

        <p class="white">{{ 'general.newsletter_form.confirmation' | t }}</p>

    {%- else -%}

        {%- for error in form.errors -%}

            <p class="white">{{ error | default_errors }}</p>

        {%- endfor -%}

        <input
            type="email"
            name="contact[email]" 
            placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"
            {% if form.errors %}autofocus{% endif %}
            {% if customer %}value="{{ customer.email }}"{% endif %}
            class="mr-sm--above-tablet mb-xs--tablet white" />
        <button type="submit" class="ml-sm--above-tablet mt-sm--tablet flex f-vertical-middle f-center--above-tablet f-space-between--tablet px-md--tablet fnt-sec">
            <span class="hide--above-tablet uc fw-300">{{ 'general.newsletter_form.submit' | t }}</span>

            {%- render 'icons', icon: 'arrow--short' -%}

        </button>

    {%- endif -%}

{%- endform -%}