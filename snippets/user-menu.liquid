<div class="user-menu flex f-vertical-center f-flex-end{% if class %} {{ class }}{% endif %}">
    {% comment %} Search {% endcomment %}
    <input type="checkbox" id="search--header" hidden data-click='{ "selector": ".site-header__search input[type=search]", "prevent": false, "action": "focus"}'/>
    <label for="search--header" class="hide--tablet-lg block p-sm--above-tablet p-sm--tablet flex f-vertical-middle px-sm--above-tablet py-sm--tablet px-sm--tablet">
        {% comment %} {%- render 'icons', icon: 'search' -%} {% endcomment %}
        <span class="sm fnt-sec fw-300 uc hide--tablet-lg">Search</span>
    </label>
    {% comment %} Currency {% endcomment %}
    <span class="site-header__currency-switcher px-sm--above-tablet hide--tablet hide--tablet-lg py-sm--tablet px-xs--tablet">
        {%- render 'currency-switcher' -%}
    </span>
    {% comment %} Login {% endcomment %}
    {%- liquid
        if shop.customer_accounts_enabled
            assign link = settings.auth0_login_url
            if customer
                assign link = routes.account_url
            endif
            assign link_text = '<span>' | append: 'Account' | append: '</span>'
            assign link_class = 'flex f-vertical-middle sm fnt-sec uc fw-300 px-sm--above-tablet py-sm--tablet px-sm--tablet hide--tablet-lg'
            if link.links.size > 0
                assign link_class = link_class | append: ' hide--tablet-lg'
            endif
            if link.url contains 'http'
                echo link_text | link_to: link, class: link_class, target: '_blank'
            else
                echo link_text | link_to: link, class: link_class
            endif
        endif
    -%}
    {% comment %} Wishlist {% endcomment %}
    <span class="px-sm--above-tablet hide--tablet hide--tablet-lg py-sm--tablet px-xs--tablet">
        {% render 'wishlisthero-header-icon' %}
    </span>
    {% comment %} Search form (when active) {% endcomment %}
    <div class="site-header__search flex f-vertical-center">
        {%- render 'search-form' -%}
        
        <label for="search--header" class="site-header__search--close">
            {%- render 'icons', icon: 'clear' -%}
        </label>
    </div>
    {% comment %} Cart {% endcomment %}
    {%- liquid  
        render 'go-cart-button'
    -%}
</div>

