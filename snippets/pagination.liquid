{%- if load_more -%}

    <div class="pagination">
        <p class="text-align-center lg mt-md">

            {%- liquid
                assign current_shown = paginate.current_offset | plus: collection.products.size
                echo 'collections.general.items_with_count' | t: product_count: current_shown, count: paginate.items
            -%}

        </p>
        <progress class="pagination-progress block mx-a my-md" max="{{ paginate.items }}" value="{{ current_shown }}"></progress>

        {%- if paginate.next -%}

            <div class="flex f-center f-vertical-center{% if class %} {{ class }}{% endif %}">
                <button data-load-more="{{ template.name }}" data-next-page="{{ paginate.next.url }}" class="pagination-btn btn{% if infinite_load %} visually-hidden{% endif %}">Load more</button>
            </div>

        {%- endif -%}

    </div>

{%- else -%}


    {%- if paginate.next or paginate.previous -%}

        <div class="pagination fnt-sec fw-500 uc md flex py-xl f-center f-vertical-center {% if class %} {{ class }}{% endif %}">

            {% comment %} Prev/Next {% endcomment %}
            {% capture pagination_previous %}
                {% render 'icons', icon: 'arrow--short', class: 'pagination__prev' %}
            {% endcapture %}

            {% comment %} Page Select {% endcomment %}
            {{ paginate | default_pagination: next: 'Next', previous: 'Back' }}
            
        </div>

    {%- endif -%}
    

{%- endif -%}
